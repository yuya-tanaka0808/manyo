<h1>Your Tasks</h1>
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= link_to 'show', task_path(task.id) %></td>
      <td><%= link_to 'edit', edit_task_path(task) %></td>
      <td><%= link_to 'destroy', task, method: :delete, data: {confirm: '本当に削除してもいいですか？'} %></td>
    </tr>
    <% end %>
  </tbody>
</table>
