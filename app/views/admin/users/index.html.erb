<h1 class = "center"><%= t('view_title.models.admin_user.index') %></h1>
<table class ="center">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.user.id') %>/</th>
      <th><%= t('activerecord.attributes.user.name') %>/</th>
      <th><%= t('view_title.models.admin_user.have_task_counts') %></th>
      <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
  <% @users.order(id: 'ASC').each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.tasks.length %></td>
      <td class = "show"><button type="button" class="btn btn-default btn-block margin-left"><%= link_to t('helpers.select.show'), admin_user_path(user.id), {class: "show"} %></button></td>
      <td class = "edit"><button type="button" class="btn btn-default btn-block margin-left"><%= link_to t('helpers.select.edit'), edit_admin_user_path(user.id), date: {confirm: t('edit?')}, class: "edit" %></button></td>
      <td class = "destroy"><button type="button" class="btn btn-default btn-block margin-left"><%= link_to t('helpers.select.destroy'), admin_user_path(user.id), method: :delete,class: "destroy" %></button></td>
    </tr>
  </tbody>
  <% end %>
</table>
<div class="link center">
  <%= link_to t('helpers.submit.create_account'), new_admin_user_path %>
  <%= link_to t('view_title.models.label.index'), labels_path %>
  <%= link_to t('view_title.models.label.new'), new_label_path %>
</div>
